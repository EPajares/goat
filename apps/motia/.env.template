# Motia Framework Configuration
# Copy this file to .env and fill in the values

# ===================
# Redis Configuration
# ===================
# Disable Motia's in-memory Redis server (use external Redis instead)
MOTIA_DISABLE_MEMORY_SERVER=true

# Redis host - use "redis" for devcontainer, "localhost" for local development
MOTIA_REDIS_HOST=redis

# Redis port
MOTIA_REDIS_PORT=6379

# ===================
# Server Configuration
# ===================
# Port for Motia server (optional, can also be set via CLI --port flag)
# MOTIA_PORT=3001

# ===================
# Database Configuration (for GOAT Core integration)
# ===================
# These are loaded from the root .env file via envFile in launch.json
# DATABASE_URL=
# DUCKLAKE_DATA_PATH=
