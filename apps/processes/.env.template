# Motia Framework Configuration
# Copy this file to .env and fill in the values

# ===================
# Server Configuration
# ===================
# Host for generating URLs (fallback when headers are missing)
# In development: localhost
# In production: your-domain.com
PROCESSES_HOST=localhost

# Port for the server
PROCESSES_PORT=8200

# ===================
# Redis Configuration
# ===================
# Disable Motia's in-memory Redis server (use external Redis instead)
MOTIA_DISABLE_MEMORY_SERVER=true

# Redis host - use "redis" for devcontainer, "localhost" for local development
MOTIA_REDIS_HOST=redis

# Redis port
MOTIA_REDIS_PORT=6379

